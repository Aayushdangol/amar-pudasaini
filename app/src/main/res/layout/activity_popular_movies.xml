<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#343b45"
    tools:context=".user.PopularMoviesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageButton
        android:id="@+id/imgPopularMoviesDashboardlogo"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/logodashboard"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etPopularMoviesDashboardSearch"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="19dp"
            android:layout_marginRight="10sp"
            android:layout_toLeftOf="@id/btnPopularMoviesDashboardprofile"
            android:background="@drawable/roundbtnsearch"
            android:cursorVisible="false"
            android:focusableInTouchMode="true"
            android:hint="search"
            android:paddingLeft="10dp"
            android:paddingBottom="3dp"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <ImageButton
            android:id="@+id/btnPopularMoviesDashboardSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search"
            android:background="@drawable/roundbtnsearch"
            android:layout_marginRight="18dp"
            android:layout_marginTop="28dp"
            android:layout_toLeftOf="@id/btnPopularMoviesDashboardprofile"/>

        <ImageButton
            android:id="@+id/btnPopularMoviesDashboardprofile"
            android:layout_width="48dp"
            android:layout_marginTop="16sp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/profileicon"/>

    </RelativeLayout>

  </LinearLayout>

    <TextView
        android:id="@+id/tvPopularMoviesActivity"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:paddingTop="10dp"
        android:layout_marginTop="1dp"
        android:paddingLeft="10dp"
        android:layout_below="@id/imgPopularMoviesDashboardlogo"
        android:background="#3e4750"
        android:text="Popular Movies"
        android:textSize="18dp"
        android:textColor="#fff"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/PopularMoviesrecylerView"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:layout_below="@id/tvPopularMoviesActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>