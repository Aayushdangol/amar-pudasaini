<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#343b45">

    <ImageView
        android:id="@+id/imgmoviePoster"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher_round"/>

        <TextView
            android:layout_below="@id/imgmoviePoster"
            android:id="@+id/tvmovieTitle"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="#fcfefb"
            android:layout_marginLeft="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Title"
            android:textSize="20sp"/>

        <TextView
            android:layout_below="@id/imgmoviePoster"
            android:layout_alignParentRight="true"
            android:id="@+id/tvmovieRating"
            android:textColor="#fcfefb"
            android:layout_marginRight="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8.2"
            android:textSize="20sp"/>


    <TextView
        android:textColor="#fcfbfa"
        android:layout_below="@id/tvmovieTitle"
        android:id="@+id/tvmovieGenre"
        android:textStyle="italic"
        android:layout_marginLeft="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movie Genre"
        android:textSize="20sp"/>

    <TextView
        android:textColor="#fcfbfa"
        android:layout_below="@id/tvmovieRating"
        android:layout_alignParentRight="true"
        android:id="@+id/tvmovieDate"
        android:textStyle="italic"
        android:layout_marginRight="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019"
        android:textSize="20sp"/>

</RelativeLayout>